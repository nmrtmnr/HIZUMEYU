// media (query) base
sp()
  @media screen and (max-width: $bpLv1 * 1px)
    {block}

pc()
  @media screen and (min-width: ($bpLv1 + 1) * 1px)
    {block}

b-vp($viewport1 = $bpLv1, $viewport2 = $dsPc)
  $viewport += 1
  @media screen and (min-width: $viewport1 * 1px) and (max-width: $viewport2 * 1px)
    {block}

u-vp($viewport = $bpLv1)
  @media screen and (max-width: $viewport * 1px)
    {block}

o-vp($viewport = $bpLv1)
  $viewport += 1
  @media screen and (min-width: $viewport * 1px)
    {block}

land()
  @media screen and (orientation: landscape)
    {block}

port()
  @media screen and (orientation: portrait)
    {block}

// media (query) project customize
// 0px 〜 768px
lv1()
  @media screen and (max-width: $bpLv1 * 1px)
    {block}

// 769px 〜
lv2()
  @media screen and (min-width: ($bpLv1 + 1) * 1px)
    {block}

// 〜 930px
u-lv1()
  @media screen and (max-width: $bpLv1 * 1px)
    {block}

// 931px 〜
o-lv1()
  @media screen and (min-width: ($bpLv1 + 1) * 1px)
    {block}

// clearfix
cf()
  &:after
    display block
    clear both
    content ''

// no font
nofont()
  font-size 0
  line-height 0

// flex center
flexCenter()
  display flex
  justify-content center
  align-items center

//*** vertical writing
vWriting()
  -ms-writing-mode tb-rl
  writing-mode vertical-rl
